{
  "extends": "@org/config/tsconfig-next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$core/*": ["src/core/*"],
      "$modules/*": ["src/modules/*"],
      "$styles/*": ["src/styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
